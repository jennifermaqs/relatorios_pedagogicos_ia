{
  "manifest_version": 3,
  "name": "Gerador de Relatórios Pedagógicos",
  "version": "1.0.0",
  "description": "Extensão para gerar relatórios pedagógicos automatizados usando Google Gemini",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Gerar Relatório Pedagógico"
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}